<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--TextBox default-->
    <Style x:Key="defaultTextBox" TargetType="TextBox">
        <Setter Property="Width" Value="200"/>
        <Setter Property="MaxWidth" Value="350"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Montserrat"/>
        <Setter Property="Foreground" Value="{StaticResource titleColor1}"/>
        <Setter Property="CaretBrush" Value="{StaticResource plainTextColor1}"/>
        <Setter Property="BorderBrush" Value="{StaticResource plainTextColor3}"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="3 0 3 0"/>
        <Setter Property="Background" Value="{StaticResource panelColor}"/>
        <Setter Property="Margin" Value="3"/>
    </Style>
</ResourceDictionary>