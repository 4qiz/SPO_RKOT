<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--TextBlock-->
    <Style x:Key="labelDefault" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Montserrat"/>
        <Setter Property="Foreground" Value="{StaticResource titleColor1}"/>
        <Setter Property="Padding" Value="3"/>
        <Setter Property="Margin" Value="3"/>
    </Style>

    <!--Information TextBlock-->
    <Style x:Key="InformationTextBlock" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontFamily" Value="Montserrat"/>
        <Setter Property="Foreground" Value="{StaticResource titleColor1}"/>
        <Setter Property="Padding" Value="3 16 3 16"/>
        <Setter Property="Margin" Value="3"/>
    </Style>
</ResourceDictionary>