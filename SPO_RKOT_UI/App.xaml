<Application x:Class="SPO_RKOT_UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SPO_RKOT_UI"
             StartupUri="Views/MainView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/LightTheme/Colors.xaml"/>
                <ResourceDictionary Source="/Styles/LightTheme/ButtonStyles.xaml"/>
                <ResourceDictionary Source="/Styles/LightTheme/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="/Styles/LightTheme/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="/Styles/LightTheme/DatePickerStyles.xaml"/>
                <ResourceDictionary Source="/Styles/LightTheme/ListViewStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BitmapImage x:Key="Images.plus" UriSource="/Images/plus.png" />
            <BitmapImage x:Key="Images.refresh" UriSource="/Images/refresh.png" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
