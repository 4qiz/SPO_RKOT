<Window x:Class="SPO_RKOT_UI.Views.SaveChangesWindowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SPO_RKOT_UI.Views"
        mc:Ignorable="d"
        Title="Предупреждение" Height="200" Width="500" Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Сохранить изменения перед выходом?" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0">
            <Button Content="Да" Margin="10" Click="YesButton_Click" Width="100"/>
            <Button Content="Нет" Margin="10" Click="NoButton_Click" Width="100"/>
            <Button Content="Отмена" Margin="10" Click="CancelButton_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>
