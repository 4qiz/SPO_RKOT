            <ListView Name="reportsListView" ItemsSource="{Binding ReportsFromDB}" 
                      Margin="6" Padding="0"
                      BorderThickness="0"
                      MouseDoubleClick="UserList_MouseDoubleClick">
                <ListView.View>
                    <GridView ColumnHeaderContainerStyle="{StaticResource GridViewColumnHeaderStyle}">
                        <GridViewColumn DisplayMemberBinding="{Binding FederalDistrict}" Header="Федеральный округ"/>
                        <GridViewColumn DisplayMemberBinding="{Binding Location}" Header="Место проведения контроля"/>
                        <GridViewColumn Header="Период проведения контроля">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding StartDate, StringFormat=d, ConverterCulture='ru-ru'}"/>
                                        <TextBlock Text="-"/>
                                        <TextBlock Text="{Binding EndDate, StringFormat=d, ConverterCulture='ru-ru'}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        
                        <GridViewColumn Header="Период проведения контроля">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Открыть"
                                        Style="{StaticResource buttonDefaulStyle}"
                                            Padding="0"
                                            Margin="0"
                                            Width="100"
                                            Foreground="{StaticResource titleColor1}"
                                            Click="WatchButtonInRow_Click"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        
                    </GridView>
                </ListView.View>
